{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "src",
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
  ,
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}